<div class="map_box">
<h3><%= link_to post.title, user_path(post.user_id) %></h3>
<p><%= post.address %></p>
  <% if post.image? %>
  <p><%= image_tag post.image.url(:large), :class => "img-rounded" %></p>
  <% end %>
  <p><%= mail_to post.user.email, "email seller", class: "btn btn-info" %></p>
  <p>seller: <% if post.user.image? %><%= image_tag post.user.image.url(:small), :class => "img-circle" %><% end %><b> <%= link_to post.user.username, user_path(post.user_id) %></b>
  </p>

</div>