<h1>Nearest locally grown produce</h1>
<h2>---filter veggies---</h2>
<table>
  <tr>
    <th>Pic....................</th>
   
    <th>Title....</th>

    <th>Text....</th>
    <th>address....</th>
<th>seller........................</th>
    <th>dist</th>

  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag post.image.url(:large) %></td>
      
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= post.address %></td>


      <td><%= post.username %></td>

      <td><b> <%= post.distance.round(1) %> miles</b></td>
    </tr>
 


  <% end %>
</table>

